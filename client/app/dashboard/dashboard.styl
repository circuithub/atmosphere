body
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif;
  padding-left: 20px; padding-top: 20px; padding-right: 20px;

a
  color: #00B7FF;

h1
  font-size: 22px;
  margin-bottom: 0px;
span.subtitle
  padding: 0px; padding-left: 30px;

h2
  margin-top: 25px;
  margin-bottom: 5px;
  padding: 0;

.small
  font-size: 8px;

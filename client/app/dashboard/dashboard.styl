.medium
  font-size: 11px;
  font-weight: 200;

div.allWorkers
  white-space: nowrap;
  overflow: auto;

div.eachWorker
  display: inline-block;
  vertical-align: top;
  margin-right: 30px;
  width: 220px;

table.worker 
  td 
    width: 50%;

.worker
  td
    padding-left: 8px;
    padding-right: 8px;
    padding-top: 2px;
    padding-bottom: 8px;

